<!-- website_dist_checkout/views/portal_templates.xml -->
<odoo>
    <!-- Menú en portal principal -->
    <template id="portal_distribuidor_menu" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div t-if="distribuidor_count" class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <h3 class="card-title">Distribuidor</h3>
                            </div>
                            <div class="col-auto" t-if="distribuidor_count">
                                <span class="badge rounded-pill text-bg-secondary">
                                    <t t-esc="distribuidor_count"/>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <a href="/distribuidor/pedidos" class="btn btn-secondary btn-block mb-2">
                            <i class="fa fa-truck me-1"/>Gestión de Envíos
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    
    <!-- Plantilla de listado de pedidos -->
    <template id="portal_dist_pedidos" name="Portal Pedidos Distribuidor">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Pedidos de Distribuidor</t>
            </t>
            
            <t t-if="orders" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Pedido</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Estado</th>
                        <th>Transportista</th>
                        <th>Tracking</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="orders" t-as="so">
                        <tr>
                            <td><a t-att-href="'/mi/pedidos/%s' % so.id"><t t-esc="so.name"/></a></td>
                            <td><span t-field="so.date_order"/></td>
                            <td><span t-field="so.partner_id"/></td>
                            <td>
                                <t t-if="so.state == 'sale'">
                                    <span class="badge rounded-pill text-bg-success">Confirmado</span>
                                </t>
                                <t t-elif="so.state == 'done'">
                                    <span class="badge rounded-pill text-bg-info">Entregado</span>
                                </t>
                            </td>
                            <td>
                                <t t-if="deliveries.get(so.id, {}).get('carrier_name')">
                                    <span t-esc="deliveries[so.id]['carrier_name']"/>
                                </t>
                            </td>
                            <td style="max-width:180px;">
                                <span class="text-truncate d-inline-block" style="max-width: 180px;"
                                      t-att-title="deliveries.get(so.id, {}).get('tracking','')">
                                    <t t-esc="deliveries.get(so.id, {}).get('tracking','-')"/>
                                </span>
                            </td>
                            <td class="text-center">
                                <a t-if="deliveries.get(so.id, {}).get('can_upload', False)"
                                   class="btn btn-sm btn-primary"
                                   t-att-href="'/distribuidor/pedido/%s/envio' % so.id">
                                    <i class="fa fa-upload me-1"/>Gestionar Envío
                                </a>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center">
                    No tienes pedidos activos como distribuidor.
                </div>
            </t>
        </t>
    </template>
    
    <!-- Formulario de envío -->
    <template id="portal_dist_envio" name="Detalles de Envío">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-12 mb-4">
                        <h3>Gestionar Envío - Pedido <t t-esc="order.name"/></h3>
                    </div>
                </div>
                
                <form action="#" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6 mb-4">
                            <div class="form-group mb-3">
                                <label for="dist_carrier_name">Transportista</label>
                                <input type="text" class="form-control" id="dist_carrier_name" 
                                       name="dist_carrier_name" required="required"
                                       t-att-value="order.dist_carrier_name or ''"/>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label for="dist_carrier_account">Cuenta de Cliente</label>
                                <input type="text" class="form-control" id="dist_carrier_account" 
                                       name="dist_carrier_account"
                                       t-att-value="order.dist_carrier_account or ''"/>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label for="dist_pickup_slot">Franja de Recogida</label>
                                <select class="form-select" id="dist_pickup_slot" name="dist_pickup_slot">
                                    <option value="">-- Seleccione Franja --</option>
                                    <option value="morning" t-att-selected="order.dist_pickup_slot == 'morning'">Mañana (8:00-14:00)</option>
                                    <option value="afternoon" t-att-selected="order.dist_pickup_slot == 'afternoon'">Tarde (14:00-18:00)</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-lg-6 mb-4">
                            <div class="form-group mb-3">
                                <label for="shipping_label">Etiqueta de Envío (PDF/ZPL)</label>
                                <input type="file" class="form-control" id="shipping_label" 
                                       name="shipping_label" accept=".pdf,.zpl"/>
                                <small class="form-text text-muted">
                                    Sube aquí la etiqueta que has generado con tu transportista
                                </small>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label for="distributor_slip">Albarán Propio (PDF)</label>
                                <input type="file" class="form-control" id="distributor_slip" 
                                       name="distributor_slip" accept=".pdf"/>
                                <small class="form-text text-muted">
                                    Opcional: puedes subir tu albarán para que quede registrado
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary">
                                Guardar Información de Envío
                            </button>
                            <a href="/distribuidor/pedidos" class="btn btn-secondary ms-2">
                                Cancelar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
