<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Formulario del portal para gestionar el envío del distribuidor -->
  <template id="portal_dist_form" name="Portal Distributor Shipping Form">
    <t t-call="portal.portal_layout">
      <t t-set="breadcrumbs_searchbar" t-value="False"/>
      <div class="container mt16">
        <t t-if="not is_managed">
          <div class="alert alert-warning">
            Este pedido no tiene seleccionado el carrier configurado como "gestiona distribuidor".
          </div>
        </t>
        <t t-if="is_managed">
          <h3>
            Envío gestionado por el distribuidor — Pedido
            <t t-esc="sale_order.name"/>
          </h3>

          <form t-attf-action="/my/orders/#{sale_order.id}/dist-shipping"
                method="post" enctype="multipart/form-data" class="mt-3">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

 	    <div class="row">
	      <div class="col-md-12">
	        <div class="mb-3">
	          <label class="form-label">Referencia del cliente</label>
	          <input type="text" name="client_order_ref" maxlength="255" class="form-control"
	                 t-att-value="sale_order.client_order_ref or ''"
	                 placeholder="Ej.: Referencia del albarán"/>
	        </div>
	      </div>
	    </div>
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Transportista (nombre)</label>
                  <input type="text" name="dist_carrier_name" class="form-control"
                         t-att-value="sale_order.dist_carrier_name or ''"/>
                </div>
                <div class="mb-3">
                  <label class="form-label">Nº de cuenta transportista</label>
                  <input type="text" name="dist_carrier_account" class="form-control"
                         t-att-value="sale_order.dist_carrier_account or ''"/>
                </div>
                <div class="mb-3">
                  <label class="form-label">Fecha/hora de recogida</label>
                  <input type="datetime-local" name="dist_pickup_datetime" class="form-control"/>
                </div>
                <div class="mb-3">
                  <label class="form-label">Franja de recogida</label>
                  <select class="form-select" name="dist_pickup_slot">
                    <option value=""></option>
                    <option value="morning"
                            t-att-selected="sale_order.dist_pickup_slot == 'morning'">Mañana</option>
                    <option value="afternoon"
                            t-att-selected="sale_order.dist_pickup_slot == 'afternoon'">Tarde</option>
                  </select>
                </div>
              </div>

              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Etiqueta del distribuidor (PDF/ZPL)</label>
                  <input type="file" name="dist_label_attachment" class="form-control"
                         accept=".pdf,.zpl,.txt,.zplx,application/pdf"/>
                  <t t-if="sale_order.dist_label_attachment_id">
                    <p class="mt-2">
                      Actual:
                      <a t-att-href="'/web/content/%s?download=1' % sale_order.dist_label_attachment_id.id"
                         target="_blank">
                        <t t-esc="sale_order.dist_label_attachment_id.name"/>
                      </a>
                    </p>
                  </t>
                </div>
                <div class="mb-3">
                  <label class="form-label">Albarán propio del distribuidor (PDF)</label>
                  <input type="file" name="dist_packing_slip_attachment" class="form-control"
                         accept=".pdf,application/pdf"/>
                  <t t-if="sale_order.dist_packing_slip_attachment_id">
                    <p class="mt-2">
                      Actual:
                      <a t-att-href="'/web/content/%s?download=1' % sale_order.dist_packing_slip_attachment_id.id"
                         target="_blank">
                        <t t-esc="sale_order.dist_packing_slip_attachment_id.name"/>
                      </a>
                    </p>
                  </t>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-primary mt-2">
              <i class="fa fa-save me-1"/>
              Guardar
            </button>
            <a t-attf-href="/my/orders/#{sale_order.id}" class="btn btn-link mt-2">
              Volver al pedido
            </a>
          </form>
        </t>
      </div>
    </t>
  </template>
</odoo>
