<odoo>
    <data>
        <record id="available_service_page" model="ir.ui.view">
            <field name="name">Sales Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Palletways Services">
                        <group>
                            <field name="palletways_service_id" readonly="1" string="Service"/>
                        </group>

                        <field name="palletways_service_ids" readonly="1">
                            <tree nolabel="1" readonly="1">
                                <field name="service_group_code"/>
                                <field name="service_code"/>
                                <field name="service_name"/>
                                <field name="service_group_name"/>
                                <field name="service_days_min"/>
                                <field name="service_days_max"/>
                                <button type='object' class="fa fa-arrow-right oe_link" name="set_service"
                                        string="Use Service"/>
                            </tree>
                        </field>
                        <group>
                            <button type='object' class="fa fa-arrow-right oe_link" name="get_service"
                                    string="Get Services"/>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
