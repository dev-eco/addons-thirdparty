<odoo>
    <record id="palletways_configuration" model="ir.ui.view">
        <field name="name">Palletways Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Palletways Configuration">
                    <group>
                        <group>
                            <field name="use_palletways_shipping_provider"/>
                            <field name="palletways_api_url"
                                   invisible="use_palletways_shipping_provider != True" required="use_palletways_shipping_provider != False"/>
                            <field name="palletways_api_key"
                                   invisible="use_palletways_shipping_provider != True" required="use_palletways_shipping_provider != False"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>