<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista formulario para Cliente API Palletways -->
        <record id="view_palletways_api_client_form" model="ir.ui.view">
            <field name="name">palletways.api.client.form</field>
            <field name="model">palletways.api.client</field>
            <field name="arch" type="xml">
                <form string="Cliente API Palletways">
                    <header>
                        <button name="action_test_connection" type="object" 
                                string="Probar Conexión" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="test_mode"/>
                                <field name="api_endpoint"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="account_code"/>
                                <field name="api_key" password="True"/>
                            </group>
                            <group>
                                <field name="last_request_time" readonly="1"/>
                                <field name="request_count" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista lista -->
        <record id="view_palletways_api_client_tree" model="ir.ui.view">
            <field name="name">palletways.api.client.tree</field>
            <field name="model">palletways.api.client</field>
            <field name="arch" type="xml">
                <tree string="Clientes API Palletways">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="test_mode"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_palletways_api_client" model="ir.actions.act_window">
            <field name="name">Clientes API Palletways</field>
            <field name="res_model">palletways.api.client</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
