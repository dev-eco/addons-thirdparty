<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extender vista formulario de stock.picking para añadir campos Palletways -->
        <record id="view_picking_form_palletways" model="ir.ui.view">
            <field name="name">stock.picking.form.palletways</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Añadir campos invisibles para que estén disponibles -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="delivery_type" invisible="1"/>
                    <field name="palletways_shipment_id" invisible="1"/>
                    <field name="palletways_tracking_id" invisible="1"/>
                    <field name="palletways_status" invisible="1"/>
                    <field name="palletways_shipment_count" invisible="1"/>
                    <field name="palletways_tracking_url" invisible="1"/>
                </xpath>

                <!-- Añadir campos en la pestaña de información adicional -->
                <xpath expr="//page[@name='extra']" position="inside">
                    <group string="Palletways" invisible="delivery_type != 'palletways'">
                        <field name="palletways_shipment_id" readonly="1"/>
                        <field name="palletways_tracking_id" readonly="1"/>
                        <field name="palletways_status" readonly="1"/>
                    </group>
                </xpath>

                <!-- Añadir botones en el header si hay envío Palletways -->
                <xpath expr="//header" position="inside">
                    <button name="action_palletways_track" type="object" 
                            string="Seguimiento Palletways" 
                            class="btn-secondary"
                            invisible="not palletways_tracking_id"/>
                    <button name="action_palletways_update_status" type="object" 
                            string="Actualizar Estado PW" 
                            class="btn-secondary"
                            invisible="not palletways_tracking_id"/>
                </xpath>
            </field>
        </record>

        <!-- Extender vista lista - CORRECCIÓN: Usar External ID correcto para Odoo 17 -->
        <record id="view_picking_tree_palletways" model="ir.ui.view">
            <field name="name">stock.picking.tree.palletways</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="palletways_tracking_id" optional="hide"/>
                    <field name="palletways_status" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
