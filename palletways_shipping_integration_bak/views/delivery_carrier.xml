<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="palletways_method_configuration" model="ir.ui.view">
        <field name="name">Palletways Carrier Information</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position="before">
                <page string="Palletways Configuration" name="palletways_configuration">
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="bill_unit_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                            <field name="tail_lift"/>
                            <field name="notification"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
