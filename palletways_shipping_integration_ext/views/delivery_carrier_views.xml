<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Añadimos mapeo y umbrales en la misma pestaña del conector -->
  <record id="palletways_ext_carrier_view" model="ir.ui.view">
    <field name="name">palletways.ext.carrier.view</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='destination']" position="after">
         <page name="palletways_configuration" string="Palletways Configuration" attrs="{'invisible': [('delivery_type',
'!=', 'palletways')]}">
          <group string="Bill Unit mapping (Ext)">
            <field name="palletways_bill_full_id"/>
            <field name="palletways_bill_light_id"/>
            <field name="palletways_bill_half_id"/>
            <field name="palletways_bill_extra_light_id"/>
            <field name="palletways_bill_quarter_id"/>
            <field name="palletways_bill_mini_quarter_id"/>
          </group>
          <group string="Umbrales (kg)">
            <field name="palletways_full_max"/>
            <field name="palletways_light_max"/>
            <field name="palletways_half_max"/>
            <field name="palletways_extra_light_max"/>
            <field name="palletways_quarter_max"/>
            <field name="palletways_mini_quarter_max"/>
          </group>
         </page>
      </xpath>
    </field>
  </record>
</odoo>
